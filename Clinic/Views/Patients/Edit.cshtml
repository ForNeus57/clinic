@model Patient

@{
    ViewData["Title"] = "Edit given Patient";
}

<div class="row justify-content-center">
    <div class="col-11 col-sm-10 col-md-9 col-lg-8" style="padding: 5vh; border: solid black 2px; border-radius: 7vh">
        <form asp-controller="Patients" asp-action="Edit" method="post">
            <input asp-for="Address.Id" hidden="hidden"/>
            <fieldset>
                <div class="row">
                    <legend>
                        Dane pacjenta
                    </legend>
                </div>
                <div class="row">
                    <div class="col-6">
                        <label asp-for="FirstName" class="form-label mt-8"></label>
                        <input asp-for="FirstName" class="form-control">
                        <span asp-validation-for="FirstName" class="text-danger"></span>
                    </div>
                    <div class="col-6">
                        <label asp-for="LastName" class="form-label mt-8"></label>
                        <input asp-for="LastName" class="form-control">
                        <span asp-validation-for="LastName" class="text-danger"></span>
                    </div>
                </div>
                <div class=" mt-3">
                    <label asp-for="Pesel" class="form-label mt-8"></label>
                    <input asp-for="Pesel" class="form-control">
                    <span asp-validation-for="Pesel" class="text-danger"></span>
                </div>

            </fieldset>
            <fieldset>
                <div class="row mt-4">
                    <legend>
                        Adres
                    </legend>
                </div>
                <div class="row">
                    <div class="col-6">
                        <label asp-for="Address.StreetName" class="form-label mt-8"></label>
                        <input asp-for="Address.StreetName" class="form-control">
                        <span asp-validation-for="Address.StreetName" class="text-danger"></span>
                    </div>
                    <div class="col-3">
                        <label asp-for="Address.StreetNumber" class="form-label mt-8"></label>
                        <input asp-for="Address.StreetNumber" class="form-control">
                        <span asp-validation-for="Address.StreetNumber" class="text-danger"></span>
                    </div>
                    <div class="col-3">
                        <label asp-for="Address.ApartmentNumber" class="form-label mt-8"></label>
                        <input asp-for="Address.ApartmentNumber" class="form-control">
                        <span asp-validation-for="Address.ApartmentNumber" class="text-danger"></span>
                    </div>
                </div>
                <div class="row mt-3">
                    <div class="col-6">
                        <label asp-for="Address.ZipCode" class="form-label mt-8"></label>
                        <input asp-for="Address.ZipCode" class="form-control">
                        <span asp-validation-for="Address.ZipCode" class="text-danger"></span>
                    </div>
                    <div class="col-6">
                        <label asp-for="Address.City" class="form-label mt-8"></label>
                        <input asp-for="Address.City" class="form-control">
                        <span asp-validation-for="Address.City" class="text-danger"></span>
                    </div>
                </div>
            </fieldset>
            <div asp-validation-summary="None" class="text-danger"></div>

            <input name="__Re`questVerificationToken" type="hidden" value="<removed for brevity>">
            <div class="row mt-3">
                <div class="col-6 d-grid">
                    <button type="submit" class="btn btn-dark btn-block">
                        <img src="~/img/pencil-square.svg" alt="Database Edit Icon"/>
                        Edytuj
                    </button>
                </div>
                <div class="col-6 d-grid">
                    <a asp-controller="Patients" asp-action="Index" class="btn btn-dark">
                        <img src="~/img/table.svg" alt="Table Icon"/>
                        Powrót do Listy Pacjentów
                    </a>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
